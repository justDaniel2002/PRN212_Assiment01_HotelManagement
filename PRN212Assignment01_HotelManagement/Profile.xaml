        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212Assignment01_HotelManagement"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="800">
    <Grid>
        <Label FontSize="30" FontWeight="Bold" Content="Your infomations" HorizontalAlignment="Left" Margin="52,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Fullname:" FontSize="20" HorizontalAlignment="Left" Margin="84,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" Margin="84,153,0,0" VerticalAlignment="Top"/>
        <Label Content="Birthdate:" FontSize="20" HorizontalAlignment="Left" Margin="84,0,0,0" VerticalAlignment="Center" Width="116"/>
        <TextBox x:Name="tbFullname" FontSize="20" HorizontalAlignment="Left" Margin="216,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216"/>
        <TextBox x:Name="tbEmail" FontSize="20" HorizontalAlignment="Left" Margin="216,161,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216"/>
        <Button x:Name="btnClose" Click="btnClose_Click" Content="Close" FontSize="20" HorizontalAlignment="Left" Margin="635,365,0,0" VerticalAlignment="Top" Width="85"/>
