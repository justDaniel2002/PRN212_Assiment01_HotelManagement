<Window x:Class="PRN212Assignment01_HotelManagement.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212Assignment01_HotelManagement"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Room Number:" HorizontalAlignment="Left" Margin="384,52,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbRomNumber" SelectionChanged="cbRomNumber_SelectionChanged" HorizontalAlignment="Left" Margin="480,56,0,0" VerticalAlignment="Top" Width="259"/>
        <Label Content="Room Information:" HorizontalAlignment="Left" Margin="38,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="38,83,0,0" VerticalAlignment="Top"/>
        <Label Content="Capacity:" HorizontalAlignment="Left" Margin="38,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Price per date:" HorizontalAlignment="Left" Margin="38,135,0,0" VerticalAlignment="Top"/>
        <Label Content="Room Type:" HorizontalAlignment="Left" Margin="38,166,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbDescription" IsReadOnly="True" HorizontalAlignment="Left" Margin="138,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214"/>
        <TextBox x:Name="tbCapacity" IsReadOnly="True" HorizontalAlignment="Left" Margin="138,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214"/>
        <TextBox x:Name="tbPrice" IsReadOnly="True" HorizontalAlignment="Left" Margin="138,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214"/>
        <TextBox x:Name="tbRoomType" IsReadOnly="True" HorizontalAlignment="Left" Margin="138,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214"/>
        <Button x:Name="btnOrder" Click="btnOrder_Click" Content="Order" HorizontalAlignment="Left" Margin="494,105,0,0" VerticalAlignment="Top" Width="56"/>
        <Button x:Name="btnProfile" Click="btnProfile_Click" Content="Profile" HorizontalAlignment="Left" Margin="582,105,0,0" VerticalAlignment="Top" Width="56"/>
        <Button x:Name="btnLogout" Click="btnLogout_Click" Content="Logout" HorizontalAlignment="Left" Margin="670,105,0,0" VerticalAlignment="Top" Width="56"/>

    </Grid>
</Window>
